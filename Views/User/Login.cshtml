@{
	ViewData["Title"] = "Login";
	var redirectReason = TempData["RedirectReason"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="bg-light">
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card shadow-sm">
					<div class="card-header bg-primary text-white">
						<h3 class="card-title mb-0">@ViewData["Title"]</h3>
					</div>
					<div class="card-body">
						<!-- Display error or redirect reason messages -->
						@if (TempData["ErrorMessage"] != null)
						{
							<div class="alert alert-danger">@TempData["ErrorMessage"]</div>
						}
						else if (!string.IsNullOrEmpty(redirectReason))
						{
							<div class="alert alert-warning">@redirectReason</div>
						}
						<!-- Login form -->
						<form asp-controller="User" asp-action="Login" method="post">
							<div class="form-group">
								<label for="name">Name</label>
								<input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								<input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
							</div>
							<button type="submit" class="btn btn-primary btn-block">Submit</button>
						</form>
						<!-- Signup button -->
						<form asp-controller="User" asp-action="Signup" method="get" class="mt-3">
							<button type="submit" class="btn btn-secondary btn-block">Sign Up</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

</body>
</html>