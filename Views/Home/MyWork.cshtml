@model CloudApplication.Models.ProductModel

@{
	ViewData["Title"] = "My Work";
}

<h1>@ViewData["Title"]</h1>

<p>Page to display the work of KhumaloCraft.</p>
<form asp-controller="Product" asp-action="MyWorkInsertProduct" method="post">
	<p>Insert new product</p>
	<input asp-for="Name" type="text" placeholder="Product Name" required />
	<input asp-for="Price" type="text" placeholder="Product Price" required />
	<input asp-for="Category" type="text" placeholder="Product Category" required />
	<input asp-for="Availability" type="hidden" value="Available" />
	<input asp-for="ImageName" type="text" placeholder="Image Name" required />
	<input asp-for="ImageUrl" type="text" placeholder="Image URL" required />
	<button type="submit">Submit</button>
</form>

